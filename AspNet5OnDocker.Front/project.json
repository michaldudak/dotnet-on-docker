{
	"webroot": "wwwroot",
	"version": "1.0.0-*",

	"dependencies": {
		"Microsoft.AspNet.Mvc": "6.0.0-beta7",
		"Microsoft.AspNet.Mvc.WebApiCompatShim": "6.0.0-beta7",
		"Microsoft.AspNet.Loader.IIS": "1.0.0-beta7",
		"Microsoft.AspNet.Loader.IIS.Interop": "1.0.0-beta7",
		"Microsoft.AspNet.Server.Kestrel": "1.0.0-beta7",
		"Microsoft.AspNet.StaticFiles": "1.0.0-beta7",
		"Microsoft.AspNet.Diagnostics": "1.0.0-beta7",
		"System.Net.Http": "4.0.0"
	},

	"commands": {
		"web": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.Kestrel --server.urls http://localhost:50000"
	},

	"frameworks": {
		"dnx451": { },
		"dnxcore50": { }
	},

	"exclude": [
		"wwwroot",
		"node_modules",
		"bower_components"
	],
	"publishExclude": [
		"node_modules",
		"bower_components",
		"**.xproj",
		"**.user",
		"**.vspscc"
	]
}
